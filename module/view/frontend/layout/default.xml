<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="root">
            <block class="MagentoEse\InStorePickup\Block\StoreSelector" name="magentoese_instorepickup_storeselector" after="page.wrapper" template="store_selector.phtml"/>
        </referenceContainer>
        <referenceBlock name="top.links">
            <block class="MagentoEse\InStorePickup\Block\StoreNav" name="instorepickup_nav" before="-" template="store_nav.phtml"/>
        </referenceBlock>
        <referenceContainer name="instorepickup_nav">
            <block class="MagentoEse\InStorePickup\Block\StoreDetails" name="magentoese_instorepickup_storedetails" after="page.wrapper" template="store_details.phtml"/>
        </referenceContainer>
    </body>
</page>
